meta {
  name: Create payment method
  type: http
  seq: 3
}

post {
  url: {{base_url}}/api/v1/identity/{{identity_id}}/payment-methods
  body: json
  auth: bearer
}

headers {
  : 
}

auth:bearer {
  token: {{jwt}}
}

body:json {
  {
    "ownerName": "John Doe",
    "provider": "",
    "details": {
      "paymentNetwork": "INSTAPAY",
      "currency": "PHP",
      "channelSubject": "unionbank",
      "accountNumber": "1234567890"
    },
    "isSelf": true
  }
}

vars:pre-request {
  identity_id: id_test1
}

script:pre-request {
  const jsonwebtoken = require('jsonwebtoken');
  
  const privateKey = bru.getEnvVar("jwt_private_key").replaceAll('\\n', '\n')
  
  const jwt = jsonwebtoken.sign({}, privateKey, {
      issuer: bru.getEnvVar("jwt_issuer"),
      keyid: bru.getEnvVar("jwt_kid"),
      algorithm: 'ES256',
      expiresIn: '3650d', // 10 years
  })
  
  bru.setEnvVar("jwt", jwt)
}
