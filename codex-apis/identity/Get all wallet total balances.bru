meta {
  name: Get all wallet total balances
  type: http
  seq: 2
}

get {
  url: {{base_url}}/api/v1/identity/{{identity_id}}/wallets/total-balances?network=ETHEREUM
  body: none
  auth: bearer
}

params:query {
  network: ETHEREUM
}

auth:bearer {
  token: {{jwt}}
}

body:json {
  {
    "identityId": "id_test1"
  }
}

vars:pre-request {
  identity_id: id_01JM6AY9JMQKM9PYVPQKAKBSMR
}

script:pre-request {
  const jsonwebtoken = require('jsonwebtoken');
  
  const privateKey = bru.getEnvVar("jwt_private_key").replaceAll('\\n', '\n')
  
  const jwt = jsonwebtoken.sign({}, privateKey, {
      issuer: bru.getEnvVar("jwt_issuer"),
      keyid: bru.getEnvVar("jwt_kid"),
      algorithm: 'ES256',
      expiresIn: '3650d', // 10 years
  })
  
  bru.setEnvVar("jwt", jwt)
}
